<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.cs4295.team.fragment.ConfirmAddmemberFragment">



    <ListView
        android:layout_below="@+id/Confirmmsg"
        android:layout_above="@+id/addMemberButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listMember"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addmember"
        android:id="@+id/addMemberButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/confirmAddMember"
        android:id="@+id/Confirmmsg"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
